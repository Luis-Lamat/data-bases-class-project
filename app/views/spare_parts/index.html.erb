<h1>Listing spare_parts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Provider</th>
      <th>Cost</th>
      <th>Extra cost</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spare_parts.each do |spare_part| %>
      <tr>
        <td><%= spare_part.name %></td>
        <td><%= spare_part.provider %></td>
        <td><%= spare_part.cost %></td>
        <td><%= spare_part.extra_cost %></td>
        <td><%= spare_part.quantity %></td>
        <td><%= link_to 'Show', spare_part %></td>
        <td><%= link_to 'Edit', edit_spare_part_path(spare_part) %></td>
        <td><%= link_to 'Destroy', spare_part, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Spare part', new_spare_part_path, class: "button medium success" %>
